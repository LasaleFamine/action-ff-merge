{
  "name": "actions-ff-merge",
  "version": "2.0.0",
  "description": "GitHub Action to merge a pull request with Fast Forward",
  "keywords": [
    "merge",
    "github",
    "action",
    "fast-forward"
  ],
  "license": "MIT",
  "repository": "lasalefamine/actions-ff-merge",
  "author": "LasaleFamine",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "lint": "eslint . --ext ts",
    "test": "tsc --noEmit && jest --coverage --passWithNoTests",
    "package": "ncc build --source-map --license licenses.txt",
    "release": "git pull && standard-version && git push --follow-tags",
    "all": "pnpm build && pnpm package && pnpm test",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.ts": "eslint"
  },
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/exec": "1.1.1",
    "@actions/github": "5.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.1",
    "@commitlint/config-conventional": "17.6.1",
    "@jest/globals": "29.5.0",
    "@lasalefamine/eslint-config-base": "3.0.2",
    "@lasalefamine/tsconfig": "0.1.0",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.0",
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@typescript-eslint/parser": "5.59.0",
    "@vercel/ncc": "0.36.1",
    "eslint": "8.39.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.1",
    "standard-version": "9.5.0",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "files": [
    "dist/src",
    "!*.test.*"
  ],
  "main": "dist",
  "types": "dist",
  "nyc": {
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "dist/src",
      "src"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
